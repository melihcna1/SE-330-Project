<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce316project.ConfigManagementController">
    <center>
        <TableView fx:id="configTable" prefHeight="300">
            <columns>
                <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
                <TableColumn fx:id="pathColumn" text="Path" prefWidth="300"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" padding="10">
            <Button text="New" onAction="#handleNew"/>
            <Button text="Edit" onAction="#handleEdit"/>
            <Button text="Delete" onAction="#handleDelete"/>
        </HBox>
    </bottom>
</BorderPane>
