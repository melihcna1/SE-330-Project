<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.ce316project.ProjectSetupController" spacing="10">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Label text="Select Configuration Directory"/>
    <HBox spacing="10">
        <TextField fx:id="txtConfigDir" prefWidth="300.0" editable="false"/>
        <Button fx:id="btnSelectConfigDir" text="Browse..." onAction="#selectConfigDir"/>
    </HBox>

    <Label text="Select Submissions Directory"/>
    <HBox spacing="10">
        <TextField fx:id="txtSubmissionsDir" prefWidth="300.0" editable="false"/>
        <Button fx:id="btnSelectSubmissionsDir" text="Browse..." onAction="#selectSubmissionsDir"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="btnCreate" text="Create Project" onAction="#createProject"/>
        <Button fx:id="btnCancel" text="Cancel" onAction="#cancel"/>
    </HBox>
</VBox>